<div class="row">
  <div class="large-12 columns">
    <!-- FIXME Should be a responsive layout -->
    <div class="description-container">
      <h4><i class="icon-tasks icon-inline-prefix"></i>{{name}}</h4>
      {{#if deletedAt}}
      <a href="#" id="restore-button" class="small button primary">Restore</a>
      {{else}}
      <a href="#" id="delete-button" class="small button alert">Delete</a>
      {{/if}}
      <a href="{{route "deals:edit" id}}" id="edit-button" class="small button">Edit</a>
      {{#unless following}}
      <a href="#" id="follow-button" class="small button primary">Follow</a>
      {{else}}
      <a href="#" id="unfollow-button" class="small button secondary">Unfollow</a>
      {{/unless}}
    </div>
  </div>
</div>
<div class="row collapse properties-container">
  <div class="large-12 columns">
    {{#if category}}
    <div class="property">
      <span class="label">Category</span>
      <span class="value">{{category}}</span>
    </div>
    {{/if}}
    {{#if status}}
    <div class="property">
      <span class="label">Status</span>
      <span class="value">{{status}}</span>
    </div>
    {{/if}}
    {{#if organization}}
    <div class="property">
      <span class="label">Organization</span>
      <span class="value">{{{linkTo organization.name "organizations:show" organization.id}}}</span>
    </div>
    {{/if}}
    {{#if contact}}
    <div class="property">
      <span class="label">Contact Person</span>
      <span class="value">{{{linkTo contact.name "people:show" contact.id}}}</span>
    </div>
    {{/if}}
    {{#if pm}}
    <div class="property">
      <span class="label">Project Manager</span>
      <span class="value">{{{linkTo pm.name "users:show" pm.id}}}</span>
    </div>
    {{/if}}
    {{#if sales}}
    <div class="property">
      <span class="label">Sales Person</span>
      <span class="value">{{{linkTo sales.name "users:show" sales.id}}}</span>
    </div>
    {{/if}}
    {{#if accuracy}}
    <div class="property">
      <span class="label">Accuracy</span>
      <span class="value">{{percent accuracy}}</span>
    </div>
    {{/if}}
    {{#if startDate}}
    <div class="property">
      <span class="label">Start Date</span>
      <span class="value">{{localDate startDate}}</span>
    </div>
    {{/if}}
    {{#if orderDate}}
    <div class="property">
      <span class="label">Order Date</span>
      <span class="value">{{localDate orderDate}}</span>
    </div>
    {{/if}}
    {{#if acceptDate}}
    <div class="property">
      <span class="label">Accept Date</span>
      <span class="value">{{localDate acceptDate}}</span>
    </div>
    {{/if}}
    {{#if deletedAt}}
    <div class="property">
      <span class="label">Deleted Datetime</span>
      <span class="value">{{localDatetime deletedAt}}</span>
    </div>
    {{/if}}
  </div>
</div>
<div class="row activities-panel"></div>
<div class="row">
  <div class="large-12 columns">
    <div class="section-container tabs" data-section="tabs">
      <section id="updates" class="active">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-circle-blank icon-inline-prefix"></i>Updates</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="activities">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-calendar icon-inline-prefix"></i>Activities</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="sales">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-bar-chart icon-inline-prefix"></i>Sales Projections</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="files">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-file icon-inline-prefix"></i>Files</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
    </div>
  </div>
</div>