<div class="note-editor">
  <header>{{{linkTo user.name "users:show" user.id}}} {{action}} a note to {{{linkTo auditable.subject.name subjectRoute auditable.subject.id}}}</header>
  <section class="contents text"></section>
  <footer>
    <span class="datetime">at {{localDatetime updated_at}}</span>
    <span class="separator">|</span>
    <div class="actions">
      <a href="#" data-bypass class="edit">Edit</a>
      <a href="#" data-bypass class="delete">Delete</a>
    </div>
  </footer>
</div>