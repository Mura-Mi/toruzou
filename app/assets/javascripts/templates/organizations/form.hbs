<div class="row">
  <div class="large-12 columns">
    <form>
      <fieldset>
        <legend><i class="icon-building icon-inline-prefix"></i>{{title}}</legend>
        <div class="row">
          <div class="large-12 columns" data-fields="name">
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns" data-fields="abbreviation">
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns" data-fields="address">
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns" data-fields="remarks">
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns" data-fields="url">
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns" data-fields="ownerId">
          </div>
        </div>
      </fieldset>
      <div class="row form-actions">
        <div class="large-12 columns">
          <input type="submit" value="Save" class="button primary" />
          <input type="button" value="Cancel" class="button cancel" />
        </div>
      </div>
    </form>
  </div>
</div>
