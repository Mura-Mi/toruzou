<div class="row">
  <div class="large-12 columns">
    <!-- FIXME Should be a responsive layout -->
    <div class="description-container">
      <h4><i class="icon-building icon-inline-prefix"></i>{{name}}</h4>
      {{#if deletedAt}}
      <a href="#" id="restore-button" class="small button primary">Restore</a>
      {{else}}
      <a href="#" id="delete-button" class="small button alert">Delete</a>
      {{/if}}
      <a href="#" id="edit-button" class="small button">Edit</a>
      {{#unless following}}
      <a href="#" id="follow-button" class="small button primary">Follow</a>
      {{else}}
      <a href="#" id="unfollow-button" class="small button secondary">Unfollow</a>
      {{/unless}}
    </div>
  </div>
</div>
<div class="row collapse properties-container">
  <div class="large-12 columns">
    {{#if organization}}
    <div class="property">
      <span class="label">Organization</span>
      <span class="value">{{{linkTo organization.name "organizations:show" organization.id}}}</span>
    </div>
    {{/if}}
    {{#if phone}}
    <div class="property">
      <span class="label">Phone</span>
      <span class="value">{{phone}}</span>
    </div>
    {{/if}}
    {{#if email}}
    <div class="property">
      <span class="label">Email</span>
      <span class="value"><a href="mailto:{{email}}">{{email}}</a></span>
    </div>
    {{/if}}
    {{#if address}}
    <div class="property">
      <span class="label">Address</span>
      <span class="value">{{address}}</span>
    </div>
    {{/if}}
    {{#if owner}}
    <div class="property">
      <span class="label">Owner</span>
      <span class="value">{{{linkTo owner.name "users:show" owner.id}}}</span>
    </div>
    {{/if}}
    {{#if remarks}}
    <div class="property">
      <span class="label">Remarks</span>
      <span class="value">{{{remarks}}}</span>
    </div>
    {{/if}}
    {{#if deletedAt}}
    <div class="property">
      <span class="label">Deleted Datetime</span>
      <span class="value">{{localDatetime deletedAt}}</span>
    </div>
    {{/if}}
  </div>
</div>
<div class="row activities-panel"></div>
<div class="row">
  <div class="large-12 columns">
    <div class="section-container tabs" data-section="tabs">
      <section id="updates" class="active">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-circle-blank icon-inline-prefix"></i>Updates</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="activities">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-calendar icon-inline-prefix"></i>Activities</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="careers">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-list-alt icon-inline-prefix"></i>Careers</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="deals">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-tasks icon-inline-prefix"></i>Deals</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
      <section id="files">
        <p class="title" data-section-title>
          <a href="#" data-bypass><i class="icon-file icon-inline-prefix"></i>Files</a>
        </p>
        <div class="content" data-section-content></div>
      </section>
    </div>
  </div>
</div>